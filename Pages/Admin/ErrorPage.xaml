<Page x:Class="UIKitTutorials.Pages.Admin.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UIKitTutorials.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ErrorPage">

    <Grid>
        <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="LogoMini.png" Width="80" Margin="40"/>
                <Label Content="Вы не являетесь администратором! Пожалуйста, авторизуйтесь." Style="{DynamicResource BlackText-20}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
